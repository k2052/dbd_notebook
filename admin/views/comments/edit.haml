.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:comments, :index)
      %li=link_to pat(:new), url(:comments, :new)
      %li.active=link_to pat(:edit), url(:comments, :edit, :id => @comment.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:comment)
    .inner
      -form_for :comment, url(:comments, :update, :id => @comment.id), :method => :put, :class => :form do |f|
        =partial "comments/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")